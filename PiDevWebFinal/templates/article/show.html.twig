{% extends 'baseback2.html.twig' %}

{%  block TbaleTitle %}
    <div class="card-header">Table des articles<!--titre mtaa tableau wala elli thebou aalih--></div>
{% endblock %}

{% block TbaleContent %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
           {#  <tr>
                <th>IdArticle</th>
                <td>{{ article.idArticle }}</td>
            </tr> #}
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                {% if ((article.description)|length >50)%}
                    <td>{{ article.description|slice(0,50)~'...' }}</td>
                {% else %}
                    <td>{{ article.description }}</td>
                {% endif%}

            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>  <img src="{{ vich_uploader_asset(article,'imageFile') }}" height="160" width="100"> </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    <a href="{{ path('article_edit', {'idArticle': article.idArticle}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
