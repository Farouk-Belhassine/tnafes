{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdComment</th>
                <th>ContenuComment</th>
                <th>NomClient</th>
                <th>PrenomClient</th>
                <th>Datecomment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.idComment }}</td>
                <td>{{ commentaire.contenuComment }}</td>
                <td>{{ commentaire.nomClient }}</td>
                <td>{{ commentaire.prenomClient }}</td>
                <td>{{ commentaire.datecomment ? commentaire.datecomment|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('commentaire_show', {'idComment': commentaire.idComment}) }}">show</a>
                    <a href="{{ path('commentaire_edit', {'idComment': commentaire.idComment}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentaire_new') }}">Create new</a>
{% endblock %}
