<form method="post" action="{{ path('commentaire_delete', {'idComment': commentaire.idComment}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce commentaire?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.idComment) }}">
    <button class="btn">Supprimer</button>
</form>
