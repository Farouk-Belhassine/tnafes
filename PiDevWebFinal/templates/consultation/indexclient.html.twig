{% extends 'Rendez-vous.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <h1>Consultation</h1>
    <h3 class="text-warning">Consultation en Attente</h3>

    <table class="table">
        <thead>
        <tr>

            <th>Date</th>
            <th>Heure</th>
            <th></th>

        </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            {% if consultation.etat == "att" %}
            <tr>

                <td>{{ consultation.date ? consultation.date|date('Y-m-d') : '' }}</td>
                <td>{{ consultation.heure ? consultation.heure|date('H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('consultation_showclient', {'idConsultation': consultation.idConsultation}) }}">Afficher</a>
                    <a class="btn btn-success" href="{{ path('consultation_edit', {'idConsultation': consultation.idConsultation}) }}">Modifier</a>
                </td>

            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="4">Pas de consultation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-outline-primary" href="{{ path('consultation_new') }}">Nouvelle Consultation</a>
    <h3 class="text-success">Consultation Accept√©</h3>
