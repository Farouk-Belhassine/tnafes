<!DOCTYPE html>

<title>Participation index</title>

{% block body %}
    <h1>Participation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdParticipation</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>EMail</th>
                <th>NbParticipant</th>
                <th>DatePart</th>
                <th>DateEvenement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.idParticipation }}</td>
                <td>{{ participation.nom }}</td>
                <td>{{ participation.prenom }}</td>
                <td>{{ participation.eMail }}</td>
                <td>{{ participation.nbParticipant }}</td>
                <td>{{ participation.datePart ? participation.datePart|date('Y-m-d') : '' }}</td>
                <td>{{ participation.dateEvenement ? participation.dateEvenement|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('participation_show', {'idParticipation': participation.idParticipation}) }}">show</a>
                    <a href="{{ path('participation_edit', {'idParticipation': participation.idParticipation}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participation_new') }}">Create new</a>
{% endblock %}
