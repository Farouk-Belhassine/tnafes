            <DropShadow />
         </effect></Button>
      <ImageView fitHeight="296.0" fitWidth="237.0" layoutX="494.0" layoutY="132.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/edit.png" />
